{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": ["ES2020"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "./BP/scripts",
        "allowJs": true,
        
        "baseUrl": "./src",
        "paths": {
            "@config.js": ["config.js"],
            "@modules/*": ["server/modules/*"],
            "@notbeer-api": ["library/Minecraft.js"]
        }
    },
    "include": [
        "./src",
        "./src/library/*"    
    ]
}