{
    "format_version": "1.17.30",
    "animation_controllers": {
        "controller.animation.hand_checker.detect": {
            "states": {
                "default": {
                    "animations": ["detect"],
                    "transitions": [
                        { "a": "v.x > 1.0" },
                        { "b": "v.x > 0.0" }
                    ]
                },
                "a": {
                    "on_entry": ["/say something"]
                },
                "b": {
                    "on_entry": ["/say another!"]
                }
            }
        }
    }
}
